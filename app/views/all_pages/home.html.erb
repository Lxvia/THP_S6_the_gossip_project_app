<div id="jumbotron" class="p-5 text-white rounded">
    <h1 id="home_title" class="text-center"> Hello <%= @first_name %> ! Welcome to The Gossip Project </h1>
    <h2 class="text-center"> You can submit a gossip <a href="/gossip/new">here</a></h2>
   
</div>

<h3 id="view_all" class="text-center"> View All Gossips :</p>

<div id="section_cards">
    <% @gossips.each do |gossip| %>
        <div id="section_cards">
            <div class="card border-0" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title"><%= gossip.title %></h5>
                    <a class="lien_read" href="/gossip/<%= gossip.id %>">Read gossip</a>
                    <p> <%= gossip.comments.count %> comments </p>
                    <p id="created_on" class="card-text">Created on <%= gossip.created_at%> by <%= gossip.user.first_name %></p>
                    
                </div>
            </div>
        </div>
    <% end %>
</div>