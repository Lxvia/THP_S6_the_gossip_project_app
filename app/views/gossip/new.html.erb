
  <div class="d-flex justify-content-center mt-5">
    <%= form_tag url_for(action: 'create'), method: "post" do %>
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

      <div class="d-flex flex-column">
        <p class="text-center"><%= label_tag 'Gossip title' %></p>
        <%= text_field_tag 'title', @gossip_new.title %>
        <br /> <br />
      </div>

      <div class="d-flex flex-column">
        <p class="text-center"><%= label_tag 'Content' %></p>
        <%= text_area_tag 'body', @gossip_new.content %>
      </div>

      <div class="p-5 mt-5"><%= submit_tag "Create gossip !" %></div>

    <% end %>
  </div>